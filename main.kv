<HomePage>:
    FloatLayout:
        id:float_principal
        pos_hint:{'right':1,'top':1}
        size_hint:1,1
        
        canvas:
        	Color:
        		rgba:1,1,1,1
        	Rectangle:
        		pos:self.pos
        		size:self.size
        		source:'fotos/aurora.jpg'
        		
        Label:
            pos_hint:{'right':1,'top':1.30}
            size_hint:1,1
            text:'Ascensão'
            color:0,1,0,1
            font_size: 65
        LabelButton:
            pos_hint:{'right':0.59,'top':1.45}
            size_hint:1,1
            text:'Sair'
            font_size: 43
            on_press:root.sair()
        Label:
        	id:label_error
        	text:''
        	pos_hint:{'right':1,'top':0.80}
        	size_hint:1,1
        Image:
        	id:foto_usuario
        	pos_hint:{'right':0.95,'top':1}
        	size_hint:0.10,0.10
        Button:
        	pos_hint:{'right':0.95,'top':1}
        	size_hint:0.10,0.10
        	background_color:0,0,0,0
        	on_press:root.manager.current = 'configuracoes'
        Label:
        	id:user_name
        	text:''
        	pos_hint:{'right':1.40,'top':1.40}
        	size_hint:1,1
		ScrollView:
			id: scroll
			size_hint:(1,0.40) # define o tamanho da caixa do scrollview: 0.40
			pos_hint:{'top':0.65,'right':1}
			do_scroll_x: False
			bar_width: 10
			
			BoxLayout:
				id: box
				orientation:'vertical'
				pos_hint:{'top':1,'right':1}
				size_hint_y:None
				height: self.minimum_height # Altura automatica baseada nos filhos
				
				Label:
					id:resposta_ia
					text:'Como posso te ajudar?'
					size_hint_y:None
					text_size: self.width - 20, None
					halign:'left'
					valign:'top'
					padding: 10,20
					height: self.texture_size[1] + 50 # Altura dinamica com espaço extra
					
        TextInput:
        	id:entrada_usuario
        	hint_text:'Pergunte qualquer coisa '
        	pos_hint:{'right':1,'top':0.18}
        	size_hint:1,0.10
        	background_color: 0.3,0.3,0.3,1
        	foreground_color:1,1,1,1
        	on_focus:root.alterar_posicao()
        Image:
        	pos_hint:{'right':1,'top':0.05}
            size_hint:1,0.05
        	source:'fotos/Botao.png'      
        Button:
        	id:enviar_pergunta
        	text:'Enviar'
        	pos_hint: {'right':1,'top':0.05}
        	size_hint:1,0.05
        	background_color:0,0,0,0
        	on_press:root.iniciar_processo()
        
        
